@using TinhLuong.Models
@model Login
@{
    Layout = null;
}
<style>
    .login-page {
        margin-top: auto;
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Hệ thống tính lương | Đăng nhập</title>
    <link href="~/Assets/BootrapAdmin/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Assets/BootrapAdmin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Assets/BootrapAdmin/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Assets/BootrapAdmin/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Assets/BootrapAdmin/dist/css/AdminLTE.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- iCheck -->
    <link href="~/Assets/BootrapAdmin/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    <![endif]-->
</head>
<body class="hold-transition login-page" >
    <div class="login-box">
        <div class="login-logo">
            <a style="font-size:30px" href="#"><b>HỆ THỐNG TÍNH LƯƠNG</b><br />@*<span style="font-size:27px; font-weight:400;">VNPT THÁI NGUYÊN</span>>*@</a>
        </div>
        <div id="div_login" style="width: 100%; background-color: #0162a7; color: white; height: 60px; box-shadow: 1px 0 1em Gray; display: block">
            <div class="login-box-msg">
                <div style="float: left; padding-top: 12px; padding-right: 10px;width:10%; margin-left:-5px" class="text-right">
                    @*<img alt="logo" src="Images/logo_banner.png" width="37">*@
                    <img src="~/Assets/Uploads/logo_banner.png" width="37" />
                </div>
                <div style="float: left; padding-top: 15px; font-size: 18px; width:90%; padding-left:5px" class="text-center">VIỄN THÔNG THÁI NGUYÊN</div>
            </div>
        </div>
       
        <!-- /.login-logo -->
        <div class="login-box-body">
          
            <p class="login-box-msg">Đăng nhập để bắt đầu phiên làm việc</p>
            @*<form action="" method="post">*@
            @using (Html.BeginForm("LoginAction", "Login", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.Username, new { @class= "form-control",@placeholder="Tài khoản" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Mật khẩu", })
                    @Html.ValidationMessageFor(x => x.Password)
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <div class="checkbox icheck">
                            <label>
                                @Html.CheckBoxFor(x => x.Remember)<span style="margin-left:5px"> Ghi nhớ đăng nhập</span> 
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fa fa-sign-in"></i> Đăng nhập</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
            @*<div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Sign in using
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                        <i class="fa fa-google-plus"></i> Sign in using
                        Google+
                    </a>
                </div>*@
            <!-- /.social-auth-links -->
            <button id="forgotPass" style="color:red; background:none; border:none">Quên mật khẩu?</button><br>
        </div>
        <div style="width: 100%; background-color: #0162a7; color: white; height: auto; box-shadow: 1px 0 1em Gray; font-size: 12px; text-align: center; line-height: 14px; padding-top: 5px; padding-bottom:5px">
            <b>©2014-<span id="lblCurrentYear" style="font-weight:bold;">2017</span>,  VIỄN THÔNG THÁI NGUYÊN</b><br>
            Địa chỉ: Số 10 - Cách Mạng Tháng 8 - Tp Thái Nguyên - Thái Nguyên<br>
            Điện thoại: 858.360 | Hotline: 0915.209.666 - 0944.535.454
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Assets/BootrapAdmin/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Assets/BootrapAdmin/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Assets/BootrapAdmin/plugins/iCheck/icheck.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
    @if (TempData["AlertMessage"] != null)
            {
        <style>
            #AlertBox {
                width: 25%;
                height: auto;
                display: block;
                box-shadow: 0px 2px 2px rgba(0,0,0,0.5); /*Đổ bóng cho menu*/
                position: fixed; /*Cho menu cố định 1 vị trí với top và left*/
                bottom: 30%; /*Nằm trên cùng*/
                right: 10%; /*Nằm sát bên trái*/
                z-index: 100000; /*Hiển thị lớp trên cùng*/
            }
        </style>

        @*<div id="AlertBox" class="ui-pnotify dark ui-pnotify-fade-normal ui-pnotify-in ui-pnotify-fade-in ui-pnotify-move" aria-live="assertive" aria-role="alertdialog" style="display: none; width: 300px; right: 36px; top: 36px; cursor: auto;"><div class="alert ui-pnotify-container alert-info ui-pnotify-shadow" role="alert" style="min-height: 16px;"><div class="ui-pnotify-closer" aria-role="button" tabindex="0" title="Close" style="cursor: pointer; visibility: hidden; display: none;"><span class="glyphicon glyphicon-remove"></span></div><div class="ui-pnotify-sticker" aria-role="button" aria-pressed="true" tabindex="0" title="Unstick" style="cursor: pointer; visibility: hidden; display: none;"><span class="glyphicon glyphicon-play" aria-pressed="true"></span></div><div class="ui-pnotify-icon"><span class="glyphicon glyphicon-info-sign"></span></div><h4 class="ui-pnotify-title">PNotify</h4><div class="ui-pnotify-text" aria-role="alert">Welcome. Try hovering over me. You can click things behind me, because I'm non-blocking.</div></div></div>*@
        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>@TempData["AlertMessage"]</strong>
        </div>
                <script>
                            $(function () {
                                $('#AlertBox').removeClass('hide');
                                $('#AlertBox').delay('15000').slideUp('1000');
                            });
                </script>

    }
    <script src="~/Assets/js/forgotPass.js"></script>
</body>
</html>
