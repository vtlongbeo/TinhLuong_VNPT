@using TinhLuongINFO;
@model DM_Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{

    <script src="~/Assets/js/Profile.js"></script>
}
<!-- Main content -->

<section class="content">
    <div class="row">
        @using (Html.BeginForm("UpdateInfo", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            <div class="col-md-3">

                <!-- Profile Image -->

                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" style="width:128px; height:128px" src="@Model.Avartar" alt="User profile picture">

                        <h3 class="profile-username text-center">@Model.HoTen</h3>

                        <p class="text-muted text-center">@Model.TenDonVi</p>

                        @*<ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Followers</b> <a class="pull-right">1,322</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Following</b> <a class="pull-right">543</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Friends</b> <a class="pull-right">13,287</a>
                                </li>
                            </ul>*@
                        <div class="btn btn-primary btn-file btn-block">
                            <i class="fa fa-picture-o"></i> Chọn ảnh đại diện
                            <input type="file" name="Avartar" id="Avartar">
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- About Me Box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <center>

                            <h3 class="box-title">Thông tin cá nhân</h3>
                        </center>
                    </div>
                    <!-- /.box-header -->
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        <!-- /.col -->
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    @*<ul class="nav nav-tabs">
                            <li class="active"><a href="#activity" data-toggle="tab">Activity</a></li>
                            <li><a href="#timeline" data-toggle="tab">Timeline</a></li>
                            <li><a href="#settings" data-toggle="tab">Settings</a></li>
                        </ul>*@


                    <!-- /.tab-pane -->

                    <div class="active tab-pane" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-2 control-label">Đơn vị</label>

                                <div class="col-sm-10">
                                    <input type="text" disabled class="form-control" id="DonVi" name="DonVi" value="@Model.TenDonVi">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Tài khoản</label>

                                <div class="col-sm-10">
                                    <input type="text" disabled class="form-control" id="UserName" name="UserName" value="@Model.UserName">
                                </div>
                            </div>
                            <div class="form-group">
                                <div style="margin-top:20px">
                                    <label for="inputName" class="col-sm-2 control-label">Họ tên</label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10" style="margin-top:20px">
                                    <button id="btnUpdate" class="btn btn-primary">Cập nhật</button>
                                    <a id="btnChangPass" data-toggle="modal" data-target="#modelChangePass" class="btn btn-danger">Đổi mật khẩu</a>

                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- /.tab-pane -->
                    <!-- /.tab-content -->
                </div>

                <!-- /.nav-tabs-custom -->
            </div>
        }
        <!-- /.col -->
    </div>


</section>
