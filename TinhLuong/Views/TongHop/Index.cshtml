


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        $("#prinTonghop").click(function () {
            if (confirm("Bạn thực sự muốn xem danh sách tổng hợp")) {
                if ($("#drpThang").val() > 0 && $("#drpThang").val() > 0) {
                    window.open("/TongHop/TongHopReport?thang=" + $("#drpThang").val() + "&nam=" + $("#drpNam").val(), '_blank', "scrollbars=1,resizable=1,height=500,width=700");

                } else {
                    alert("Phải chọn tháng và năm để xem danh sách tổng hợp");
                }
            }
        });

    </script>
}
<section class="content-header">

    <h1 style="width:20%; float:left">
       Tổng hợp
    </h1>
    @Html.DropDownList("drpThang", ViewBag as SelectList, "--Chọn tháng--", new { @class = "btn btn-default" })
    @Html.DropDownList("drpNam", ViewBag as SelectList, "--Chọn năm--", new { @class = "btn btn-default" })
    <button id="prinTonghop" class="btn btn-primary">Xem danh sách tổng hợp</button>
</section>

<section class="content-header">

    <div class="box"></div>
</section>

