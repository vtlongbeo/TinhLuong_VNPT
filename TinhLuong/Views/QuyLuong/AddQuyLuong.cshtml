@using (Html.BeginForm("AddQuyLuong", "QuyLuong", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Thêm mới quỹ lương</h4>
        </div>
        <div class="modal-body">
            <div class="box-body">
                <div class="left" style="width:30%; float:left; margin-left:10px">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tháng</label>
                        @Html.DropDownList("Thang", ViewBag as SelectList,"--Chọn tháng--" ,new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Năm</label>
                        @Html.DropDownList("Nam", ViewBag as SelectList,"--Chọn năm--", new { @class = "form-control",
                       required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mã đơn vị</label>
                        <input required="required" type="text" class="form-control" name="DonViID" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Quỹ lương KH</label>
                        <input type="number" class="form-control" value="0"  name="QuyGT_KH" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Quỹ lương tổ mạng</label>
                        <input type="number" min="0" class="form-control" value="0"  name="QuyThe_KH" >
                    </div>


                </div>
                <div class="center" style="width:30%; float:left;margin-left:30px">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Hệ số BSC đơn vị</label>
                        <input type="number" min="0" class="form-control" value="0"  name="ChatLuongThang">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">QuyThe</label>
                        <input type="number" min="0"  class="form-control" value="0"  name="QuyThe">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">TyLe_HTKH</label>
                        <input type="number" min="0" class="form-control" value="0"  name="TyLe_HTKH" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">TyLeThe</label>
                        <input type="number" min="0" class="form-control" value="0"  id="TyLeThe" name="TyLe_The" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">TyLeCuoc</label>
                        <input type="number" min="0"  class="form-control" value="0"  name="TyLe_Cuoc" >
                    </div>



                </div>
                <div class="right" style="width:30%; float:left; margin-left:30px">
                    <div class="form-group">
                        <label for="exampleInputPassword1">TyLe_HTCNTT</label>
                        <input type="number" min="0" class="form-control" value="0"  name="TyLe_HTCNTT">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">CSTL_LDDB</label>
                        <input type="number" min="0" class="form-control" value="0"  name="CSTL_LDDB">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">STT</label>
                        <input type="number" min="0" class="form-control" value="0"  name="STT" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">QuyGT</label>
                        <input type="number" min="0" class="form-control" value="0"  name="QuyGT" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">QuyTT</label>
                        <input type="number" min="0"  class="form-control" value="0"  name="QuyTT">
                    </div>
                </div>


            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-danger" id="savePass">Thêm mới</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
}


